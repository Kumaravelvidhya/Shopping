@model DataAccessLayer.AddProduct



<h4>AddProduct</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Addproduct">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <table>
                <thead>
                    <tr>

                        <th>


                            <div class="form-group">
                                @* <label asp-for="ProductName" class="control-label"></label>*@
                                <select asp-for="ProductName" class="form-control" placeholder=" Select Product" style="width:fit-content;padding: 10px;margin-bottom: 10px;border: 1px solid #ccc;border-radius: 4px;font-size: 16px;" />
                                <option>Select city</option>
                                <option>SRM</option>
                                <option>KRCT</option>
                                <option>MKCE</option>
                                <option>HICET</option>
                                <option>PSG</option>
                                <option>IIIT</option>
                                <option>MIT</option>
                                <span asp-validation-for="ProductName" class="text-danger"></span>
                            </div>

                        </th>
                        <th>


                            <div class="form-group">
                                @*                 <label asp-for="Quantity" class="control-label"></label>
                                *@  <input asp-for="Quantity" class="form-control" placeholder="Enter Quantity" style="width:90%;padding: 10px;margin-bottom: 10px;border: 1px solid #ccc;border-radius: 4px;font-size: 16px;" />
                                <span asp-validation-for="Quantity" class="text-danger"></span>
                            </div>
                        </th>
                        <th>

                            <div class="form-group">
                                <input type="submit" value="Add" class="btn btn-primary" />
                            </div>

                        </th>
                    </tr>
                </thead>
            </table>
        </form>
    </div>
</div>